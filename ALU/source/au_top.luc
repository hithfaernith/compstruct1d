module au_top (
    input clk,              // 100MHz clock
    input rst_n,            // reset button (active low)
    output led[8],         // 8 user controllable LEDs
    input usb_rx,           // USB->Serial input
    output usb_tx,          // USB->Serial output
    output io_led [3][8],   // LEDs on IO Shield
    output io_seg [8],      // 7-segment LEDs on IO Shield
    output io_sel [4],      // Digit select on IO Shield
    input io_button [5],    // 5 buttons on IO Shield
    input io_dip [3][8]     // DIP switches on IO Shield
  ) {
  
  sig rst;                  // reset signal
  sig manual_input[16];
  
  
  .clk(clk) {
    // The reset conditioner is used to synchronize the reset signal to the FPGA
    // clock. This ensures the entire FPGA comes out of reset at the same time.
    reset_conditioner reset_cond;
    button_conditioner btn_cond;
    
    button_conditioner corrupt_button(.in(io_button[1]));
    button_conditioner manual_reset_button(.in(io_button[2]));
    button_conditioner manual_step_button(.in(io_button[3]));
    
    button_conditioner pause_switch(.in(io_dip[2][2]));
    
    .rst(rst) {
      counter segment_counter(#SIZE(2), #DIV(10));

      manual_alu malu(.in(manual_input), .confirm(manual_step_button.out));
    }
  }
  
  multi_segment segment_display(.clk(clk), .rst(rst));
  sig minput[16];
  
  // seq_plus_vary seqplusvary(.clk(slowclock.value), .rst(rst));
  // segment_test segment_tester(.clk(slowclock.value), .rst(rst));
  tester test(
    .clk(clk),
    .rst(rst),
    .man_reset(manual_reset_button.out),
    
    .select(io_dip[2][1:0]),
    .man_input(minput),
    .pause(pause_switch.out),
    .write_enable(io_dip[2][3])
  );
  
  always {
    btn_cond.in = io_button[4];
    reset_cond.in = ~rst_n; // input raw inverted reset signal
    rst = reset_cond.out | btn_cond.out;   // conditioned reset_cond
    
    led = malu.state_display;
    
    minput[7:0] = io_dip[0];
    minput[15:8] = io_dip[1];
    
    //io_led[0] = test.alu_display[7:0];
    //io_led[1] = test.alu_display[15:8];
    io_led[0] = test.display[7:0];
    io_led[1] = test.display[15:8];
    io_led[2] = test.out;
    
    io_seg = 0;
    io_sel = 0;
    
    usb_tx = usb_rx;        // loop serial port
    
    segment_display.number = test.display;
    io_sel = 4b1111; // don't select any 7-segs by default
    io_seg = 8hFF; // blank the target 7-seg by default
    
    if (test.error_is_happening) {
      segment_display.decimal = 4b1111; 
    } else {
      segment_display.decimal = 4b0000;
    }
    
    case (segment_counter.value) {
      2b00:
        io_sel = 4b1110;
        io_seg = segment_display.seg_out1;
      2b01:
        io_sel = 4b1101;
        io_seg = segment_display.seg_out2;
      2b10:
        io_sel = 4b1011;
        io_seg = segment_display.seg_out3;
      2b11:
        io_sel = 4b0111;
        io_seg = segment_display.seg_out4;
    }
  }
}

