module compare_unit (
    input a[16],
    input b[16],
    input alufn[6],
    
    output res[16]
  ) {
  
  sig compare_code[3];

  always {
    res = 0;
    compare_code = alufn[2:0];
    
    case (compare_code) {
      3b011:
        res = a == b;
      3b101:
        res = a < b;
      3b111:
        res = a <= b;
    }
    
  }
}
